    link(rel='stylesheet', href='https://code.getmdl.io/1.3.0/material.indigo-pink.min.css')
    script(defer='', src='https://code.getmdl.io/1.3.0/material.min.js')
  body
    header.head-login
      .header-inner
        .container
          ul 
            li
              a(href='request.html') 
                i.material-icons touch_app
                | Requests
              a(href='notifications.html')
                i.material-icons notifications 
                | Notifications
              a(href='')
                i.material-icons add_box 
                | New Item
      .login-account       
        .container
          .col-md-2.login-img
            img.img-responsive(src='/images/logo_blue.svg', alt='Hangurs')
          .col-md-10
            a(href='account-details.html')
             | Account Details
            a(href='wallet.html') 
             | Wallet
            a(href='privacy.html') 
             | Privacy
            a(href='') 
              | Help
             a(href='') 
              | About
            a(href='index.html')
                | Log Out
            
      
      .account-details
        h2.inner-heading My Account
        .mdl-grid
          .mdl-cell.mdl-cell--2-col
          .mdl-grid.mdl-shadow--2dp.mdl-cell.mdl-cell--8-col
            .mdl-cell.mdl-cell--12-col.mdl-grid
              .mdl-cell.mdl-cell--12-col
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                  label.account-label(for='sample2') Your Nickname
                  label.mdl-textfield__label(for='sample2')
                  input#sample2.mdl-textfield__input(type='text' , value='celiatanya')
              .mdl-cell.mdl-cell--12-col
                h3 Personal Info    
              .mdl-cell.mdl-cell--12-col.mdl-grid
                  .mdl-cell.mdl-cell--3-col.account-image
                      img.img-responsive(src='/images/admin.jpg', alt='Hangurs')
                      span edit
                  .mdl-cell.mdl-cell--9-col
                    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                      label.mdl-textfield__label(for='sample2') First Name
                      input#sample2.mdl-textfield__input(type='text' , value='celia')
                    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                      label.mdl-textfield__label(for='sample2') Last Name
                      input#sample2.mdl-textfield__input(type='text' , value='Everklian')
                    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                      label.mdl-textfield__label(for='sample2') Mobile Number
                      input#sample2.mdl-textfield__input(type='text' , value='+1(438)123-456')
              .mdl-cell.mdl-cell--12-col
                h3 Drop-off / Delivery Address
              .mdl-cell.mdl-cell--12-col.mdl-grid
                .mdl-cell.mdl-cell--12-col.mdl-grid
                  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                    label.mdl-textfield__label(for='sample2') Address Line 1
                    input#sample2.mdl-textfield__input(type='text' , value='12 Palemira Street')
                  .mdl-cell.mdl-cell--6-col
                    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                      label.mdl-textfield__label(for='sample2') Address Line 2
                      input#sample2.mdl-textfield__input(type='text' , value='AZ 85705')
                  .mdl-cell.mdl-cell--6-col
                    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                      label.mdl-textfield__label(for='sample2') State
                      input#sample2.mdl-textfield__input(type='text' , value='Tucson')
                  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                    label.mdl-textfield__label(for='sample2') Country
                    input#sample2.mdl-textfield__input(type='text' , value='USA')


    include components/footer.jade